generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum JobType {
  MGT
  OSP
  REG
}

enum JobRole {
  MGT
  FFO
  FSA
  TSA
}

enum Region {
  KTR_N
  KTR_II
  KTR_III
}

enum Exchange {
  Exchange_N
  KAP
  SITE
  Hijri
  Johar
  Malir
  Hadeed
  Maymar
  Orangi
  Gulshan
  Azizabad
  Nazimabad
  Pak_Capital
  North_Karachi
}

enum EntryType {
  DDS
  Float
  Kiosk
}

model Employee {
  epi        String      @id
  name       String
  type       JobType
  role       JobRole
  region     Region
  exchange   Exchange
  joinDate   DateTime
  FSA        FSA[]
  TSA        TSA[]
  PaidOrders PaidOrders?
}

model FSA {
  id                      Int       @id @default(autoincrement())
  epi                     String
  employee                Employee  @relation(fields: [epi], references: [epi], onDelete: Cascade)
  type                    EntryType @default(DDS)
  customerName            String
  customerPSTN            String?
  customerMobile          String
  customerAddress         String
  customerLatitude        Float
  customerLongitude       Float
  currentInternetPrice    Int?
  currentInternetProvider String
  reason                  String
  remarks                 String?
  createdAt               DateTime  @default(now())
}

model TSA {
  id                      Int      @id @default(autoincrement())
  epi                     String
  employee                Employee @relation(fields: [epi], references: [epi], onDelete: Cascade)
  customerName            String
  customerPSTN            String?
  customerMobile          String
  customerAddress         String
  currentInternetPrice    Int?
  currentInternetProvider String
  reason                  String
  remarks                 String?
  createdAt               DateTime @default(now())
}

model PaidOrders {
  epi                  String   @id
  employee             Employee @relation(fields: [epi], references: [epi], onDelete: Cascade)
  lastMonthPaid        Int
  monthToDatePaid      Int
  monthToDateGenerated Int
}
